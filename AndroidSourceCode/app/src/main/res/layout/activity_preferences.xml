<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:weightSum="100">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main"
        android:theme="@style/Toolbar"
        android:layout_gravity="top"
        android:orientation="vertical"
        >
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/border">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/settings"
            android:textSize="24dp"/>
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/store"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <Button
            android:id="@+id/button_camera"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/photo"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/button_video"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/video"
            android:layout_margin="3dp"
            />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/hwanpp"
        android:text=""
        android:textSize="25dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="3장"
            android:layout_margin="3dp"
            android:background="@drawable/border2"/>

        <Button
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="5장"
            android:layout_margin="3dp"
            android:background="@drawable/border2"/>

        <Button
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="7장"
            android:layout_margin="3dp"
            android:background="@drawable/border2"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/hwandd"
        android:text=""
        android:textSize="25dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <Button
            android:id="@+id/button_45"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="45초"
            android:layout_margin="3dp"
            android:background="@drawable/border2"/>

        <Button
            android:id="@+id/button_60"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="60초"
            android:layout_margin="3dp"
            android:background="@drawable/border2"/>

        <Button
            android:id="@+id/button_90"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="90초"
            android:layout_margin="3dp"
            android:background="@drawable/border2"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/hwanss"
        android:text=""
        android:textSize="25dp"
        android:textColor="#000000"/>
    <RelativeLayout
        android:id="@+id/rl"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/sw"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="off"/>
        <Switch
            android:id="@+id/sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:switchMinWidth="@android:dimen/app_icon_size"
            android:text=""
            android:textOn=""
            android:textOff=""
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/sw"
            android:layout_marginLeft="10dp"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="on"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/hwanuu"
        android:text=""
        android:textSize="25dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textSize="25dp"
        android:background="@drawable/border2"
        />



</LinearLayout>

